# PayPal Integration Configuration
# Copy this to your .env file and configure with your PayPal credentials

# PayPal Environment (sandbox for testing, live for production)
PAYPAL_MODE=sandbox

# PayPal API Credentials (get from PayPal Developer Console)
PAYPAL_CLIENT_ID=your_sandbox_client_id_here
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret_here

# PayPal Webhook Configuration
PAYPAL_WEBHOOK_SECRET=your_webhook_secret_here
PAYPAL_WEBHOOK_ID=your_webhook_id_here

# Currency Service Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Frontend URL for PayPal redirects
FRONTEND_URL=http://localhost:3000

# Studio API configuration for subscription sync
STUDIO_API_BASE=http://localhost:3000
STUDIO_API_KEY=your_studio_api_key_here

# Database Configuration (if not already set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=bot_marketplace

# Development Mode (set to false for production)
DEVELOPMENT_MODE=false

# API Configuration
API_BASE_URL=http://localhost:8000
